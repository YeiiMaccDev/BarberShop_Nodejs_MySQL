<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <form class="card card-body bg-dark text-white p-5" action="/signup" method="POST">
        <h3 class="text-center fw-bold mb-4">Regístro</h3>

        <label for="fullname">Nombre Completo:</label>
        <input type="type" name="fullname" placeholder="John Carter" class="form-control mb-3" autofocus />

        <label for="username">Email:</label>
        <input type="email" name="email" placeholder="ejemplo@gmail.com" class="form-control mb-3" />

        <label for="password">Contraseña:</label>
        <input type="password" name="password1" placeholder="Password" class="form-control mb-3" />

        {{!-- Confirm your password --}}
        <label for="password">Confirmar Contraseña:</label>
        <input type="password" name="password2" placeholder="Password" class="form-control mb-3" />

        <button class="btn btn-success btn-block">
          Regístro
        </button>
        {{! Link }}
        <p class="fs-5 text-center text-white mt-3">¿Ya tienes una cuenta?
          <a href="/signin" class="text-info">Iniciar sesión</a>
        </p>

    </div>

    </form>


  </div>
</div>